<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BitmapActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/marte"
        android:src="@drawable/sole_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMarte" />

    <Button
        android:id="@+id/buttonUrano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/urano"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSaturno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonSaturno"
        app:layout_constraintTop_toTopOf="@+id/buttonSaturno" />

    <Button
        android:id="@+id/buttonSole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="@string/sole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonSaturno"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSaturno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saturno"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSole"
        app:layout_constraintEnd_toStartOf="@+id/buttonUrano"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonSole"
        app:layout_constraintTop_toTopOf="@+id/buttonSole" />

    <ImageView
        android:id="@+id/imageViewMarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/marte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/marte_tag" />


</androidx.constraintlayout.widget.ConstraintLayout>